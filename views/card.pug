extends layout.pug

block content
  section#content
    section.flashcards
      .card(class=`card-${side}`)
        .card-header
        h1.card-title= side[0].toUpperCase() + side.slice(1)
        #content
          h2= text
          if hint
            p#hint
              i Hint: It starts with an "s"
        .card-flip-wrap
          a(href=`?side=${flip}`)
            img.card-flip(src='/static/img/flip.svg')
        .card-next
          a(href='/cards')
            img(src='/static/img/next.svg')
