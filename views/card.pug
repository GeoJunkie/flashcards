extends layout.pug

block content
  section#content
    section.flashcards
      .card(class=`card-${side}`)
        .card-header
        h1.card-title= side
        #content
          h2= text
          if hint
            button#show-hint Show hint
            p.hint#hint(style='display:none')
              i= hint
        .card-flip-wrap
          a(href=`?side=${flip}`)
            img.card-flip(src='/static/img/flip.svg')
        .card-next
          a(href='/cards')
            img(src='/static/img/next.svg')
  script(src='/static/js/app.js')
